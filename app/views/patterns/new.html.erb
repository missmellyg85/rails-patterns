<%= render layout: 'patterns' do %>
  <h2>Add a new pattern</h2>
  <%= form_with scope: :pattern, url: patterns_path, local: true do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
    <div>
        <%= collection_select(:pattern, :brand_id, Brand.all, :id, :name) %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
<% end %>